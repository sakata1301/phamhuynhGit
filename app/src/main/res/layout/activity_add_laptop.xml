<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundxanhtim"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back_ANL"
            android:background="@drawable/back"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="cursive"
            android:text="LAPTOP MANAGER"
            android:textColor="#F1F1F6"
            android:textSize="40dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:paddingLeft="5dp"
                android:text="Laptop ID:"
                android:textColor="#F4F4ED"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_lapID"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:paddingLeft="5dp"
                android:text="Laptop Name:"
                android:textColor="#F4F4ED"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_lapName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:paddingLeft="5dp"
                android:text="Laptop Price:"
                android:textColor="#F4F4ED"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_lapPrice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:text="Image:"
                android:textColor="#F4F4ED"
                android:textSize="15dp" />

            <ImageView

                android:id="@+id/img_anh_ANL"
                android:layout_width="100dp"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/img_btn_ANL"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/upl" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add_ANL"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="ADD"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_delete_ANL"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/bg_button"
            android:text="DELETE"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_Update_ANL"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:layout_marginRight="2dp"
            android:background="@drawable/bg_button"
            android:text="UPDATE"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_RESET_ANL"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_button"
            android:text="RESET"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_list_ANL"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>


</LinearLayout>